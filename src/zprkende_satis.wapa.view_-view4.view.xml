<mvc:View                                                                                                                                                                                                                                                      
	controllerName="test.controller.View4"                                                                                                                                                                                                                        
	xmlns:mvc="sap.ui.core.mvc"                                                                                                                                                                                                                                   
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:f="sap.f"                                                                                                                                                                                                                                               
	xmlns:form="sap.ui.layout.form"                                                                                                                                                                                                                               
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
	height="100%">                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
	<Page>                                                                                                                                                                                                                                                        
		<ObjectHeader                                                                                                                                                                                                                                                
			id="idTotalText"                                                                                                                                                                                                                                            
			title="{i18n>totalPrice1}"                                                                                                                                                                                                                                  
			number="{                                                                                                                                                                                                                                                   
				path: 'AddBasket>/ProductsTotalPrice',                                                                                                                                                                                                                     
				formatter: '.formatCurrency'                                                                                                                                                                                                                               
			}"                                                                                                                                                                                                                                                          
			                                                                                                                                                                                                                                                            
		>                                                                                                                                                                                                                                                            
		<statuses>                                                                                                                                                                                                                                                   
			<ObjectStatus id="idTotalPriceWithoutVAT" title="{i18n>totalPriceWithoutVAT}" text="{parts: [{path: 'AddBasket>/TotalPriceWithoutVAT'}, {path: 'AddBasket>/TotalPriceWithoutVAT'}], formatter: '.formatCurrency'}" />                                       
			<ObjectStatus id="idProductsTotalVAT" title="{i18n>vAT}" text="{parts: [{path: 'AddBasket>/ProductsTotalVAT'}, {path: 'AddBasket>/ProductsTotalVAT'}], formatter: '.formatCurrency'}" />                                                                    
		</statuses>                                                                                                                                                                                                                                                  
		</ObjectHeader>                                                                                                                                                                                                                                              
	                                                                                                                                                                                                                                                              
		<Table                                                                                                                                                                                                                                                       
			id="idSepetTable"                                                                                                                                                                                                                                           
			mode="Delete"                                                                                                                                                                                                                                               
			items="{AddBasket>/sepet/sepet}"                                                                                                                                                                                                                            
			enableBusyIndicator="true"                                                                                                                                                                                                                                  
			delete="handleDelete"                                                                                                                                                                                                                                       
			headerText="{i18n>labelText1}"                                                                                                                                                                                                                              
			alternateRowColors="true">                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
			<columns>                                                                                                                                                                                                                                                   
				<Column width="0%" hAlign="Begin">                                                                                                                                                                                                                         
					<Text wrapping="true" text="{i18n>columnText2}" visible="false" />                                                                                                                                                                                        
				</Column>                                                                                                                                                                                                                                                  
				                                                                                                                                                                                                                                                           
				                                                                                                                                                                                                                                                           
				<Column width="20%" hAlign="Begin">                                                                                                                                                                                                                        
					<Text wrapping="true" text="{i18n>columnText2}" />                                                                                                                                                                                                        
				</Column>                                                                                                                                                                                                                                                  
				<Column width="15%" hAlign="Begin">                                                                                                                                                                                                                        
					<Text wrapping="true" text="{i18n>Metacode}" />                                                                                                                                                                                                           
				</Column>                                                                                                                                                                                                                                                  
				<Column width="20%" hAlign="Center">                                                                                                                                                                                                                       
					<Text text="{i18n>table1122TextColumn2}" />                                                                                                                                                                                                               
				</Column>                                                                                                                                                                                                                                                  
				<Column  hAlign="Right">                                                                                                                                                                                                                                   
					<Text text="{i18n>table1122TextColumn3}" />                                                                                                                                                                                                               
				</Column>                                                                                                                                                                                                                                                  
				<Column  hAlign="Right">                                                                                                                                                                                                                                   
					<Text text="{i18n>totalPrice2}" />                                                                                                                                                                                                                        
				</Column>                                                                                                                                                                                                                                                  
			</columns>                                                                                                                                                                                                                                                  
			<items>                                                                                                                                                                                                                                                     
				<ColumnListItem>                                                                                                                                                                                                                                           
					<Text text="{AddBasket>id}" visible="false"/>                                                                                                                                                                                                             
					<Text text="{AddBasket>Maktx}" />                                                                                                                                                                                                                         
					<Text text="{AddBasket>Metacode}" />                                                                                                                                                                                                                      
					<StepInput                                                                                                                                                                                                                                                
						textAlign="Center"                                                                                                                                                                                                                                       
						fieldWidth="3%"                                                                                                                                                                                                                                          
						id="CurrentValue"                                                                                                                                                                                                                                        
						value="{AddBasket>count}"                                                                                                                                                                                                                                
						min="1"                                                                                                                                                                                                                                                  
						change="currentChangeHandler" />                                                                                                                                                                                                                         
					<Text textAlign="End"  id="idProductPriceText" text="{path: 'AddBasket>Tutar', formatter: '.formatCurrency'}"  />                                                                                                                                         
					<Text id="idBagliTutar" text="{path: 'AddBasket>tutar', formatter: '.formatCurrency'}" textAlign="End" />                                                                                                                                                 
				</ColumnListItem>                                                                                                                                                                                                                                          
			</items>                                                                                                                                                                                                                                                    
		</Table>                                                                                                                                                                                                                                                     
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
		<!-- DynamicPage Footer -->                                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
		<OverflowToolbar>                                                                                                                                                                                                                                            
			<!-- Add your toolbar content here -->                                                                                                                                                                                                                      
		</OverflowToolbar>                                                                                                                                                                                                                                           
		<OverflowToolbar>                                                                                                                                                                                                                                            
			<Button text="{i18n>resetChart}" press="onClearBasket" type="Reject" />                                                                                                                                                                                     
			<ToolbarSpacer />                                                                                                                                                                                                                                           
			<Button press="goView1" type="Neutral" text="{i18n>continueTobuyin}" />                                                                                                                                                                                     
			<Button press="goLogin" type="Emphasized" text="{i18n>goToPayment}" />                                                                                                                                                                                      
		</OverflowToolbar>                                                                                                                                                                                                                                           
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
	</Page>                                                                                                                                                                                                                                                       
                                                                                                                                                                                                                                                               
</mvc:View>                                                                                                                                                                                                                                                    