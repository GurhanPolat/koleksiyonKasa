sap.ui.define([], function () {                                                                                                                                                                                                                                
  "use strict";                                                                                                                                                                                                                                                
                                                                                                                                                                                                                                                               
  return {                                                                                                                                                                                                                                                     
    formatCurrency: function (amount) {                                                                                                                                                                                                                        
      var numericAmount = parseFloat(amount);                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
      // EÄer amount bir sayÄ± deÄilse veya NaN ise, boÅ bir dize dÃ¶ndÃ¼r                                                                                                                                                                                  
      if (                                                                                                                                                                                                                                                     
        amount === "" ||                                                                                                                                                                                                                                       
        amount === null ||                                                                                                                                                                                                                                     
        amount === undefined ||                                                                                                                                                                                                                                
        isNaN(parseFloat(amount))                                                                                                                                                                                                                              
      ) {                                                                                                                                                                                                                                                      
        return "";                                                                                                                                                                                                                                             
      }                                                                                                                                                                                                                                                        
      // SayÄ±yÄ± para birimi biÃ§imine dÃ¶nÃ¼ÅtÃ¼rerek dÃ¶ndÃ¼r                                                                                                                                                                                              
      // return numericAmount.toFixed(2) + " TL";                                                                                                                                                                                                              
    //   return numericAmount.toLocaleString("tr-TR", {                                                                                                                                                                                                        
    //     style: "currency",                                                                                                                                                                                                                                  
    //     currency: "TRY",                                                                                                                                                                                                                                    
    //   });                                                                                                                                                                                                                                                   
      return numericAmount.toLocaleString("tr-TR", {                                                                                                                                                                                                           
        style: "currency",                                                                                                                                                                                                                                     
        currency: "TRY",                                                                                                                                                                                                                                       
        currencyDisplay: 'code'                                                                                                                                                                                                                                
      });                                                                                                                                                                                                                                                      
      // return numericAmount.toLocaleString('tr-TR', { stystyle: 'decimal', minimumFractionDigits: 2, maximumFractionDigits: 2});                                                                                                                             
      // return numericAmount;                                                                                                                                                                                                                                 
    },                                                                                                                                                                                                                                                         
    formatCurrencyWithoutTRY: function (amount) {                                                                                                                                                                                                              
      var numericAmount = parseFloat(amount);                                                                                                                                                                                                                  
                                                                                                                                                                                                                                                               
      // EÄer amount bir sayÄ± deÄilse veya NaN ise, boÅ bir dize dÃ¶ndÃ¼r                                                                                                                                                                                  
      if (                                                                                                                                                                                                                                                     
        amount === "" ||                                                                                                                                                                                                                                       
        amount === null ||                                                                                                                                                                                                                                     
        amount === undefined ||                                                                                                                                                                                                                                
        isNaN(parseFloat(amount))                                                                                                                                                                                                                              
      ) {                                                                                                                                                                                                                                                      
        return "";                                                                                                                                                                                                                                             
      }                                                                                                                                                                                                                                                        
      // SayÄ±yÄ± para birimi biÃ§imine dÃ¶nÃ¼ÅtÃ¼rerek dÃ¶ndÃ¼r                                                                                                                                                                                              
      // return numericAmount.toFixed(2);                                                                                                                                                                                                                      
&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                                                       
      //   return numericAmount.toLocaleString("tr-TR", {                                                                                                                                                                                                      
    //     style: "currency",                                                                                                                                                                                                                                  
    //     currency: "TRY",                                                                                                                                                                                                                                    
    //   });                                                                                                                                                                                                                                                   
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                                           
      // return numericAmount.toLocaleString('tr-TR', { stystyle: 'decimal', minimumFractionDigits: 2, maximumFractionDigits: 2});                                                                                                                             
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                                                                                           
      return numericAmount.toLocaleString('tr-TR', {                                                                                                                                                                                                           
        style: 'decimal',                                                                                                                                                                                                                                      
        minimumFractionDigits: 2,                                                                                                                                                                                                                              
        maximumFractionDigits: 2   });                                                                                                                                                                                                                         
    },                                                                                                                                                                                                                                                         
    getBirimOrDiscountedTutar: function (BirimDiscountedTutar, Tutar) {                                                                                                                                                                                        
      var amount =                                                                                                                                                                                                                                             
        BirimDiscountedTutar != null ||                                                                                                                                                                                                                        
        BirimDiscountedTutar !== undefined ||                                                                                                                                                                                                                  
        BirimDiscountedTutar !== ""                                                                                                                                                                                                                            
          ? BirimDiscountedTutar                                                                                                                                                                                                                               
          : Tutar;                                                                                                                                                                                                                                             
      // var amount = (BirimDiscountedTutar === null || BirimDiscountedTutar === "") ? BirimDiscountedTutar : Tutar;                                                                                                                                           
      return this.formatCurrency(amount);                                                                                                                                                                                                                      
    },                                                                                                                                                                                                                                                         
    getDiscountedTutar: function (DiscountedTutar, tutar) {                                                                                                                                                                                                    
      debugger;                                                                                                                                                                                                                                                
      var amount =                                                                                                                                                                                                                                             
        DiscountedTutar != null || DiscountedTutar != ""                                                                                                                                                                                                       
          ? DiscountedTutar                                                                                                                                                                                                                                    
          : tutar;                                                                                                                                                                                                                                             
      return this.formatCurrency(amount);                                                                                                                                                                                                                      
    },                                                                                                                                                                                                                                                         
    // formatDiscountedPrice: function (DiscountedTutar, birimDiscountedTutar, count) {                                                                                                                                                                        
    //     var amount;                                                                                                                                                                                                                                         
    //     if (count === 1) {                                                                                                                                                                                                                                  
    //         amount = birimDiscountedTutar;                                                                                                                                                                                                                  
    //     } else {                                                                                                                                                                                                                                            
    //         amount = DiscountedTutar;                                                                                                                                                                                                                       
    //     }                                                                                                                                                                                                                                                   
    //     return this.formatCurrency(amount);                                                                                                                                                                                                                 
    // },                                                                                                                                                                                                                                                      
  };                                                                                                                                                                                                                                                           
});                                                                                                                                                                                                                                                            
                                                                                                                                                                                                                                                               