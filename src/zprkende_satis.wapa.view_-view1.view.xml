<mvc:View controllerName="test.controller.View1"                                                                                                                                                                                                               
    xmlns="sap.ui.table"                                                                                                                                                                                                                                       
    xmlns:m="sap.m"                                                                                                                                                                                                                                            
    xmlns:ndc="sap.ndc"                                                                                                                                                                                                                                        
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">                                                                                                                                                                                                           
    <m:Page title="{i18n>titleView1text}" >                                                                                                                                                                                                                    
    <m:SplitApp mode="ShowHideMode" initialDetail="idPage" initialMaster="treeTablePage" class="splittApp">                                                                                                                                                    
        <m:detailPages >                                                                                                                                                                                                                                       
            <m:Page id="idPage" backgroundDesign="List" class="customDetailPage" >                                                                                                                                                                             
                <m:Table id="idProductCollectionTable" class="'tablestyle"   items="{TreeProductSet>/tree/tree}"  growing="true" growingThreshold="30" selectionChange="" noDataText="{i18n>view1NoData}" alternateRowColors="true">                           
                    <m:headerToolbar>                                                                                                                                                                                                                          
                        <m:OverflowToolbar>                                                                                                                                                                                                                    
                            <!-- <m:Title text="{i18n>titleView1text}" level="H2"/> -->                                                                                                                                                                        
                            <!-- <m:Button text="{i18n>resetChart}" press="onClearBasket" type="Reject" /> -->                                                                                                                                                 
                             <m:Label text="{i18n>productSearchText}"></m:Label>                                                                                                                                                                               
                            <m:SearchField id="searchField" search="onSearchProduct"  width="25%" placeholder="{i18n>view1Placeholder}" liveChange="liveChangeProduct" />                                                                                      
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                   
                                <ndc:BarcodeScannerButton                                                                                                                                                                                                      
                                id="sampleBarcodeScannerButton"                                                                                                                                                                                                
                                scanSuccess="onScanSuccess"                                                                                                                                                                                                    
                                scanFail="onScanError"                                                                                                                                                                                                         
                                inputLiveUpdate="onScanLiveupdate"                                                                                                                                                                                             
                                dialogTitle="Barcode Scanner"                                                                                                                                                                                                  
                            />                                                                                                                                                                                                                                 
                            <m:ToolbarSpacer />                                                                                                                                                                                                                
                            <m:Button id="BadgedButton" class="sapUiTinyMarginBeginEnd" icon="sap-icon://cart" type="Default" text="{i18n>chart}" press="onBadgedButtonPress">                                                                                 
                                <m:customData>                                                                                                                                                                                                                 
                                    <m:BadgeCustomData key="badge" value="" visible="true" />                                                                                                                                                                  
                                </m:customData>                                                                                                                                                                                                                
                            </m:Button>                                                                                                                                                                                                                        
                        </m:OverflowToolbar>                                                                                                                                                                                                                   
                    </m:headerToolbar>                                                                                                                                                                                                                         
                    <m:columns>                                                                                                                                                                                                                                
                        <m:Column minScreenWidth="Tablet" demandPopin="true" width="20%">                                                                                                                                                                      
                            <m:Text text="{i18n>columnText1}" />                                                                                                                                                                                               
                        </m:Column>                                                                                                                                                                                                                            
                        <!-- <m:Column  hAlign="Left" minScreenWidth="Desktop" demandPopin="true">                                                                                                                                                             
                            <m:Text text="ÃrÃ¼n NumarasÄ±" />                                                                                                                                                                                                 
                        </m:Column> -->                                                                                                                                                                                                                        
                        <m:Column hAlign="Left" minScreenWidth="Tablet" demandPopin="true" width="35%">                                                                                                                                                        
                            <m:Text text="{i18n>columnText2}" />                                                                                                                                                                                               
                        </m:Column>                                                                                                                                                                                                                            
                        <m:Column minScreenWidth="Tablet" demandPopin="true" hAlign="Left">                                                                                                                                                                    
                            <m:Text text="{i18n>columnText3}"   />                                                                                                                                                                                             
                        </m:Column>                                                                                                                                                                                                                            
                    </m:columns>                                                                                                                                                                                                                               
                    <m:items>                                                                                                                                                                                                                                  
                        <m:ColumnListItem id="idColumnListItem" press="onColumnListItemPress"  type="Navigation">                                                                                                                                              
                            <m:Image src="{TreeProductSet>Resim}" width="150px"></m:Image>                                                                                                                                                                     
                            <m:Text text="{TreeProductSet>Maktx} ({TreeProductSet>Metacode})" />                                                                                                                                                               
                            <m:Text textAlign="End"&nbsp;                                                                                                                                                                                                      
                            text="{path: 'TreeProductSet>Tutar', formatter: '.formatCurrency'}"  />                                                                                                                                                            
                        </m:ColumnListItem>                                                                                                                                                                                                                    
                    </m:items>                                                                                                                                                                                                                                 
                </m:Table>                                                                                                                                                                                                                                     
            </m:Page>                                                                                                                                                                                                                                          
        </m:detailPages>                                                                                                                                                                                                                                       
        <m:masterPages >                                                                                                                                                                                                                                       
            <m:Page id="treeTablePage" class="customMusterPage" >                                                                                                                                                                                              
                <m:content  >                                                                                                                                                                                                                                  
                    <TreeTable id="treeTable"  selectionMode="None" cellClick="onRowSelectionChange" rowSelectionChange="onTest" toggleOpenState="toggleOpenState"                                                                                             
                    enableColumnReordering="false" rows="{path:'oModel_tree>/', parameters: {arrayNames:['children']}}">                                                                                                                                       
                        <columns>                                                                                                                                                                                                                              
                            <Column id="_IDGenColumn1">                                                                                                                                                                                                        
                                <m:Label id="_IDGenLabel1" text="{i18n>labelText1}" />                                                                                                                                                                         
                                <template>                                                                                                                                                                                                                     
                                    <m:Text id="_IDGenText1" text="{oModel_tree>Description}" wrapping="false" />                                                                                                                                              
                                </template>                                                                                                                                                                                                                    
                            </Column>                                                                                                                                                                                                                          
                        </columns>                                                                                                                                                                                                                             
                    </TreeTable>                                                                                                                                                                                                                               
                </m:content>                                                                                                                                                                                                                                   
            </m:Page>                                                                                                                                                                                                                                          
        </m:masterPages>                                                                                                                                                                                                                                       
    </m:SplitApp>                                                                                                                                                                                                                                              
    <m:footer>                                                                                                                                                                                                                                                 
    <m:OverflowToolbar>                                                                                                                                                                                                                                        
        <m:Button text="{i18n>resetChart}" press="onClearBasket" type="Reject" />                                                                                                                                                                              
        <!-- <m:Button text="{i18n>goToMainPage}" press="onGoView0" type="Success" /> -->                                                                                                                                                                      
        <m:ToolbarSpacer />                                                                                                                                                                                                                                    
        <m:Button text="{i18n>goToChart}" press="onBadgedButtonPress" type="Emphasized" />                                                                                                                                                                     
    </m:OverflowToolbar>                                                                                                                                                                                                                                       
                                                                                                                                                                                                                                                               
</m:footer>                                                                                                                                                                                                                                                    
   </m:Page>                                                                                                                                                                                                                                                   
</mvc:View>                                                                                                                                                                                                                                                    