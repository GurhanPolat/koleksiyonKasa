<mvc:View controllerName="test.controller.View2"                                                                                                                                                                                                               
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"                                                                                                                                                                                                            
    xmlns="sap.m"                                                                                                                                                                                                                                              
    xmlns:f="sap.ui.layout.form">                                                                                                                                                                                                                              
    <Page id="idLogin" title="{i18n>title}">                                                                                                                                                                                                                   
        <content >                                                                                                                                                                                                                                             
            <Text class="sapMH2FontSize" text="{i18n>view2Title}" textAlign="Center"                                                                                                                                                                           
                width="100%" ></Text>                                                                                                                                                                                                                          
                <f:SimpleForm width="100%" class="sapUiLargeMarginTop">                                                                                                                                                                                        
            <FlexBox justifyContent="Center" alignItems="Center" height="50%">                                                                                                                                                                                 
                <VBox>                                                                                                                                                                                                                                         
                    <Label text="{i18n>userName}" design="Bold" class="sapUiSmallMarginTop"></Label>                                                                                                                                                           
                    <Input id="idNameInput" width="350px" ></Input>                                                                                                                                                                                            
                    <Label text="{i18n>password}" design="Bold" class="sapUiSmallMarginTop"></Label>                                                                                                                                                           
                    <Input id="idPassInput" width="100%" type="Password"></Input>                                                                                                                                                                              
                    <Label></Label>                                                                                                                                                                                                                            
                    <HBox justifyContent="Center" alignItems="Center">                                                                                                                                                                                         
                        <Button text="{i18n>loginButtonText}" width="150px" type="Emphasized" press="onLoginButtonPress" ></Button>                                                                                                                            
                        <Button text="{i18n>buttonCancel}" width="150px" type="Reject" press="goMainMenu" class="sapUiTinyMarginBeginEnd" ></Button>                                                                                                           
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                       
                    </HBox>                                                                                                                                                                                                                                    
                </VBox>                                                                                                                                                                                                                                        
            </FlexBox>                                                                                                                                                                                                                                         
        </f:SimpleForm>                                                                                                                                                                                                                                        
        </content>                                                                                                                                                                                                                                             
    </Page>                                                                                                                                                                                                                                                    
</mvc:View>                                                                                                                                                                                                                                                    
                                                                                                                                                                                                                                                               