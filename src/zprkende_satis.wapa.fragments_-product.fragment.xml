<c:FragmentDefinition                                                                                                                                                                                                                                          
	xmlns="sap.m"                                                                                                                                                                                                                                                 
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
    xmlns:f="sap.ui.layout.form"                                                                                                                                                                                                                               
>                                                                                                                                                                                                                                                              
<Dialog title="{i18n>productInfo}" >                                                                                                                                                                                                                           
    <content>                                                                                                                                                                                                                                                  
    <Table id="tab1"  mode="SingleSelectMaster" items="{BagliProductSet>/bagli}"  selectionChange="onProductCollectionTableSelectionChange" alternateRowColors="true">                                                                                         
        <columns>                                                                                                                                                                                                                                              
            <Column width="20%">                                                                                                                                                                                                                               
                <Text text="{i18n>productPic}" />                                                                                                                                                                                                              
            </Column>                                                                                                                                                                                                                                          
            <Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="20%">                                                                                                                                                                    
                <Text text="{i18n>quantity}"/>                                                                                                                                                                                                                 
            </Column>                                                                                                                                                                                                                                          
            <!-- <Column hAlign="Left" minScreenWidth="Desktop" demandPopin="true" >                                                                                                                                                                           
                <Text text="ÃrÃ¼n No" />                                                                                                                                                                                                                      
            </Column> -->                                                                                                                                                                                                                                      
            <Column hAlign="Center" minScreenWidth="Tablet" demandPopin="true" width="20%">                                                                                                                                                                    
                <Text text="{i18n>columnText2}"  />                                                                                                                                                                                                            
            </Column>                                                                                                                                                                                                                                          
            <Column hAlign="Center" width="15%" >                                                                                                                                                                                                              
                <Text text="{i18n>price2}" />                                                                                                                                                                                                                  
            </Column>                                                                                                                                                                                                                                          
            <Column hAlign="Center"  width="15%">                                                                                                                                                                                                              
                <Text text="{i18n>totalPrice2}" />                                                                                                                                                                                                             
            </Column>                                                                                                                                                                                                                                          
        </columns>                                                                                                                                                                                                                                             
        <items>                                                                                                                                                                                                                                                
            <ColumnListItem>                                                                                                                                                                                                                                   
                <cells>                                                                                                                                                                                                                                        
                    <Image src="{BagliProductSet>Resim}" width="120px"></Image>                                                                                                                                                                                
                    <VBox>                                                                                                                                                                                                                                     
                        <StepInput                                                                                                                                                                                                                             
                            textAlign="Center"                                                                                                                                                                                                                 
                            fieldWidth="3%"                                                                                                                                                                                                                    
                            min="1"                                                                                                                                                                                                                            
                            id="CurrentValue"                                                                                                                                                                                                                  
                            value="{BagliProductSet>count}"                                                                                                                                                                                                    
                            width="90%"                                                                                                                                                                                                                        
                            change="currentChangeHandler" />                                                                                                                                                                                                   
                        <Button                                                                                                                                                                                                                                
                        id="idAddToChart"                                                                                                                                                                                                                      
                            text="{i18n>addToChart}"                                                                                                                                                                                                           
                           width="90%"                                                                                                                                                                                                                         
                            press="addToBasket"                                                                                                                                                                                                                
                            type="Emphasized"/>                                                                                                                                                                                                                
                    </VBox>                                                                                                                                                                                                                                    
&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;                                                                                                                                                         
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
                    <Text text="{BagliProductSet>Maktx} ({BagliProductSet>Metacode})"   />                                                                                                                                                                     
                    <Text  text="{path: 'BagliProductSet>Tutar', formatter: '.formatCurrency'}" textAlign="End" />                                                                                                                                             
                    <Text  id="idBagliTutar" text="{path: 'BagliProductSet>tutar', formatter: '.formatCurrency'}" textAlign="End" />                                                                                                                           
                </cells>                                                                                                                                                                                                                                       
            </ColumnListItem>                                                                                                                                                                                                                                  
        </items>                                                                                                                                                                                                                                               
    </Table>                                                                                                                                                                                                                                                   
    </content>                                                                                                                                                                                                                                                 
    <!-- <beginButton> <Button text="Sepete ÃrÃ¼n Ekle" press="addToBasket" type="Emphasized" class="sapUiTinyMarginBeginEnd"></Button></beginButton> -->                                                                                                     
    <endButton>                                                                                                                                                                                                                                                
        <Button text="{i18n>close}" press="onCloseButtonPress"></Button>                                                                                                                                                                                       
    </endButton>                                                                                                                                                                                                                                               
</Dialog>                                                                                                                                                                                                                                                      
</c:FragmentDefinition>                                                                                                                                                                                                                                        